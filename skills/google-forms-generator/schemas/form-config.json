{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/google-forms-generator/form-config.json",
  "title": "Google Forms設定スキーマ",
  "description": "Google Forms APIでフォームを作成するための設定スキーマ",
  "type": "object",
  "required": ["basicInfo"],
  "properties": {
    "basicInfo": {
      "type": "object",
      "required": ["title"],
      "properties": {
        "title": {
          "type": "string",
          "description": "フォームのタイトル",
          "minLength": 1,
          "maxLength": 200
        },
        "description": {
          "type": "string",
          "description": "フォームの説明文"
        },
        "folderId": {
          "type": "string",
          "description": "保存先Google DriveフォルダID",
          "pattern": "^[a-zA-Z0-9_-]+$"
        }
      }
    },
    "settings": {
      "type": "object",
      "properties": {
        "isQuiz": {
          "type": "boolean",
          "description": "クイズモードを有効にする",
          "default": false
        },
        "emailCollectionType": {
          "type": "string",
          "description": "メール収集タイプ",
          "enum": ["DO_NOT_COLLECT", "VERIFIED", "RESPONDER_INPUT"],
          "default": "DO_NOT_COLLECT"
        },
        "isPublished": {
          "type": "boolean",
          "description": "フォームを公開する",
          "default": true
        }
      }
    },
    "questions": {
      "type": "array",
      "description": "質問リスト",
      "items": {
        "$ref": "#/$defs/question"
      },
      "minItems": 1
    },
    "sections": {
      "type": "array",
      "description": "セクション構成",
      "items": {
        "$ref": "#/$defs/section"
      }
    },
    "branchingRules": {
      "type": "array",
      "description": "条件分岐ルール",
      "items": {
        "$ref": "#/$defs/branchingRule"
      }
    }
  },
  "$defs": {
    "question": {
      "type": "object",
      "required": ["title", "type"],
      "properties": {
        "title": {
          "type": "string",
          "description": "質問文",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "description": "質問タイプ",
          "enum": [
            "SHORT_TEXT",
            "LONG_TEXT",
            "RADIO",
            "CHECKBOX",
            "DROP_DOWN",
            "SCALE",
            "GRID_RADIO",
            "GRID_CHECKBOX",
            "DATE",
            "TIME",
            "RATING"
          ]
        },
        "required": {
          "type": "boolean",
          "description": "必須回答",
          "default": false
        },
        "description": {
          "type": "string",
          "description": "質問の補足説明"
        },
        "options": {
          "type": "array",
          "description": "選択肢（RADIO, CHECKBOX, DROP_DOWN用）",
          "items": {
            "oneOf": [
              { "type": "string" },
              { "$ref": "#/$defs/choiceOption" }
            ]
          }
        },
        "hasOther": {
          "type": "boolean",
          "description": "「その他」オプションを追加",
          "default": false
        },
        "shuffle": {
          "type": "boolean",
          "description": "選択肢をランダム表示",
          "default": false
        },
        "low": {
          "type": "integer",
          "description": "スケールの最小値",
          "minimum": 0,
          "maximum": 1
        },
        "high": {
          "type": "integer",
          "description": "スケールの最大値",
          "minimum": 2,
          "maximum": 10
        },
        "lowLabel": {
          "type": "string",
          "description": "スケールの最小値ラベル"
        },
        "highLabel": {
          "type": "string",
          "description": "スケールの最大値ラベル"
        },
        "ratingScaleLevel": {
          "type": "integer",
          "description": "評価段階",
          "minimum": 3,
          "maximum": 10
        },
        "iconType": {
          "type": "string",
          "description": "評価アイコンタイプ",
          "enum": ["STAR", "HEART", "THUMB_UP"]
        },
        "rows": {
          "type": "array",
          "description": "グリッドの行",
          "items": { "type": "string" }
        },
        "columns": {
          "type": "array",
          "description": "グリッドの列",
          "items": { "type": "string" }
        },
        "shuffleQuestions": {
          "type": "boolean",
          "description": "グリッドの行をランダム表示",
          "default": false
        },
        "includeYear": {
          "type": "boolean",
          "description": "日付に年を含める",
          "default": true
        },
        "includeTime": {
          "type": "boolean",
          "description": "日付に時刻を含める",
          "default": false
        },
        "duration": {
          "type": "boolean",
          "description": "時刻を経過時間モードにする",
          "default": false
        },
        "grading": {
          "$ref": "#/$defs/grading",
          "description": "採点設定（クイズモード時）"
        }
      }
    },
    "choiceOption": {
      "type": "object",
      "required": ["value"],
      "properties": {
        "value": {
          "type": "string",
          "description": "選択肢テキスト"
        },
        "goToAction": {
          "type": "string",
          "description": "条件分岐アクション",
          "enum": ["NEXT_SECTION", "RESTART_FORM", "SUBMIT_FORM"]
        },
        "goToSectionId": {
          "type": "string",
          "description": "遷移先セクションID"
        }
      }
    },
    "grading": {
      "type": "object",
      "properties": {
        "pointValue": {
          "type": "integer",
          "description": "配点",
          "minimum": 0
        },
        "correctAnswer": {
          "type": "string",
          "description": "正解（単一）"
        },
        "correctAnswers": {
          "type": "array",
          "description": "正解（複数）",
          "items": { "type": "string" }
        },
        "whenRight": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/$defs/feedback" }
          ],
          "description": "正解時のフィードバック"
        },
        "whenWrong": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/$defs/feedback" }
          ],
          "description": "不正解時のフィードバック"
        },
        "generalFeedback": {
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/$defs/feedback" }
          ],
          "description": "共通フィードバック"
        }
      }
    },
    "feedback": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "フィードバックテキスト"
        },
        "material": {
          "type": "array",
          "description": "参考資料",
          "items": {
            "type": "object",
            "properties": {
              "link": {
                "type": "object",
                "properties": {
                  "uri": { "type": "string", "format": "uri" },
                  "displayText": { "type": "string" }
                }
              },
              "video": {
                "type": "object",
                "properties": {
                  "youtubeUri": { "type": "string", "format": "uri" },
                  "displayText": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "section": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "セクションタイトル"
        },
        "description": {
          "type": "string",
          "description": "セクション説明"
        },
        "questions": {
          "type": "array",
          "items": { "$ref": "#/$defs/question" }
        },
        "questionIndices": {
          "type": "array",
          "description": "このセクションに含まれる質問のインデックス",
          "items": { "type": "integer" }
        }
      }
    },
    "branchingRule": {
      "type": "object",
      "properties": {
        "questionIndex": {
          "type": "integer",
          "description": "分岐元の質問インデックス"
        },
        "optionValue": {
          "type": "string",
          "description": "トリガーとなる選択肢の値"
        },
        "goToAction": {
          "type": "string",
          "enum": ["NEXT_SECTION", "RESTART_FORM", "SUBMIT_FORM"]
        },
        "goToSectionId": {
          "type": "string",
          "description": "遷移先セクションID"
        }
      }
    }
  }
}
