{
  "$schema": "../../schemas/form-config.json",
  "name": "イベント参加申込",
  "description": "セミナー・ワークショップ・イベントの参加申込フォーム",
  "basicInfo": {
    "title": "{{eventName}} 参加申込フォーム",
    "description": "{{eventName}}への参加申込ありがとうございます。\n\n【開催日時】{{eventDate}}\n【会場】{{venue}}\n\n以下のフォームに必要事項をご記入ください。"
  },
  "settings": {
    "isQuiz": false,
    "emailCollectionType": "RESPONDER_INPUT",
    "isPublished": true
  },
  "questions": [
    {
      "title": "お名前",
      "type": "SHORT_TEXT",
      "required": true,
      "description": "フルネームでご記入ください"
    },
    {
      "title": "メールアドレス",
      "type": "SHORT_TEXT",
      "required": true,
      "description": "参加証をお送りします"
    },
    {
      "title": "電話番号",
      "type": "SHORT_TEXT",
      "required": false,
      "description": "緊急連絡用（任意）"
    },
    {
      "title": "ご所属（会社名・団体名）",
      "type": "SHORT_TEXT",
      "required": false
    },
    {
      "title": "参加区分",
      "type": "RADIO",
      "required": true,
      "options": [
        "会場参加",
        "オンライン参加"
      ]
    },
    {
      "title": "このイベントを何で知りましたか？",
      "type": "CHECKBOX",
      "required": true,
      "options": [
        "Webサイト",
        "SNS（X/Twitter）",
        "SNS（Facebook）",
        "メールマガジン",
        "知人からの紹介"
      ],
      "hasOther": true
    },
    {
      "title": "イベントに期待することや質問があればお聞かせください",
      "type": "LONG_TEXT",
      "required": false
    },
    {
      "title": "個人情報の取り扱いについて同意いただけますか？",
      "type": "RADIO",
      "required": true,
      "description": "ご記入いただいた個人情報は、本イベントの運営目的以外には使用いたしません。",
      "options": [
        "同意する"
      ]
    }
  ],
  "variables": {
    "eventName": {
      "description": "イベント名",
      "required": true
    },
    "eventDate": {
      "description": "開催日時（例: 2024年2月15日 14:00〜16:00）",
      "required": true
    },
    "venue": {
      "description": "会場名（例: オンライン / 東京会場）",
      "required": true
    }
  }
}
