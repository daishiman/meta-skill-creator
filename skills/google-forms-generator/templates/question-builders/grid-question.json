{
  "$schema": "../../schemas/question.json",
  "name": "グリッド質問ビルダー",
  "description": "GRID_RADIO / GRID_CHECKBOX 質問の構造",
  "examples": {
    "grid_radio_satisfaction": {
      "title": "各項目について満足度を評価してください",
      "type": "GRID_RADIO",
      "required": true,
      "rows": [
        "製品の品質",
        "価格の適正さ",
        "カスタマーサポート",
        "納期・配送",
        "使いやすさ"
      ],
      "columns": [
        "非常に不満",
        "不満",
        "普通",
        "満足",
        "非常に満足"
      ],
      "shuffleQuestions": false
    },
    "grid_radio_agreement": {
      "title": "以下の文に対するあなたの考えを教えてください",
      "type": "GRID_RADIO",
      "required": true,
      "rows": [
        "このサービスは使いやすい",
        "価格に見合った価値がある",
        "他の人にも勧めたい",
        "継続して利用したい"
      ],
      "columns": [
        "全く同意しない",
        "同意しない",
        "どちらでもない",
        "同意する",
        "強く同意する"
      ]
    },
    "grid_radio_frequency": {
      "title": "各機能の使用頻度を教えてください",
      "type": "GRID_RADIO",
      "required": true,
      "rows": [
        "機能A",
        "機能B",
        "機能C",
        "機能D"
      ],
      "columns": [
        "使用していない",
        "月に数回",
        "週に数回",
        "毎日"
      ]
    },
    "grid_checkbox_availability": {
      "title": "参加可能な日時を選択してください",
      "type": "GRID_CHECKBOX",
      "required": false,
      "rows": [
        "1月15日（月）",
        "1月16日（火）",
        "1月17日（水）",
        "1月18日（木）",
        "1月19日（金）"
      ],
      "columns": [
        "午前（9:00-12:00）",
        "午後（13:00-17:00）",
        "夜間（18:00-21:00）"
      ]
    },
    "grid_checkbox_skills": {
      "title": "以下の技術について、経験レベルを選択してください",
      "type": "GRID_CHECKBOX",
      "required": true,
      "rows": [
        "Python",
        "JavaScript",
        "Java",
        "Go"
      ],
      "columns": [
        "基礎知識あり",
        "実務経験あり",
        "チームリード経験あり"
      ],
      "description": "該当するもの全てを選択してください"
    }
  },
  "api_structure": {
    "questionGroupItem": {
      "questions": [
        {
          "rowQuestion": {
            "title": "string (行のタイトル)"
          },
          "required": "boolean (各行の必須設定)"
        }
      ],
      "grid": {
        "columns": {
          "type": "RADIO | CHECKBOX",
          "options": [
            {
              "value": "string (列のタイトル)"
            }
          ]
        },
        "shuffleQuestions": "boolean (行をランダム表示)"
      }
    }
  },
  "usage_guide": {
    "GRID_RADIO": {
      "description": "各行で1つの列を選択",
      "best_for": ["満足度調査", "重要度評価", "同意度調査", "頻度調査"]
    },
    "GRID_CHECKBOX": {
      "description": "各行で複数の列を選択可能",
      "best_for": ["日程調整", "スキルマトリックス", "複数条件の選択"]
    }
  },
  "limitations": {
    "branching": "グリッド質問では条件分岐は使用不可",
    "grading": "クイズモードでの自動採点は非対応",
    "rows_limit": "行数が多すぎると回答者の負担が増加（推奨: 5-7行程度）",
    "columns_limit": "列数が多すぎるとモバイルで見にくい（推奨: 3-5列程度）"
  }
}
