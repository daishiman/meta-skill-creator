{
  "$schema": "../../../schemas/question.json",
  "name": "date-time-question",
  "displayName": "日付・時刻質問ビルダー",
  "description": "日付および時刻入力用の質問テンプレート",
  "questionTypes": {
    "DATE": {
      "displayName": "日付",
      "description": "日付ピッカーで日付を選択",
      "apiStructure": {
        "dateQuestion": {
          "includeYear": true,
          "includeTime": false
        }
      },
      "parameters": {
        "includeYear": {
          "type": "boolean",
          "default": true,
          "description": "年を含めるかどうか"
        },
        "includeTime": {
          "type": "boolean",
          "default": false,
          "description": "時刻入力も含めるかどうか"
        }
      },
      "examples": [
        {
          "name": "誕生日入力",
          "config": {
            "title": "生年月日を入力してください",
            "type": "DATE",
            "required": true,
            "includeYear": true,
            "includeTime": false
          }
        },
        {
          "name": "イベント日時入力",
          "config": {
            "title": "希望日時を選択してください",
            "type": "DATE",
            "required": true,
            "includeYear": true,
            "includeTime": true
          }
        },
        {
          "name": "記念日入力（年なし）",
          "config": {
            "title": "記念日を選択してください",
            "type": "DATE",
            "required": false,
            "includeYear": false,
            "includeTime": false
          }
        }
      ]
    },
    "TIME": {
      "displayName": "時刻",
      "description": "時刻または経過時間を入力",
      "apiStructure": {
        "timeQuestion": {
          "duration": false
        }
      },
      "parameters": {
        "duration": {
          "type": "boolean",
          "default": false,
          "description": "true: 経過時間入力、false: 時刻入力"
        }
      },
      "examples": [
        {
          "name": "希望時刻入力",
          "config": {
            "title": "ご都合の良い時刻を入力してください",
            "type": "TIME",
            "required": true,
            "duration": false
          }
        },
        {
          "name": "所要時間入力",
          "config": {
            "title": "予想される所要時間を入力してください",
            "type": "TIME",
            "required": false,
            "duration": true
          }
        },
        {
          "name": "開始時刻入力",
          "config": {
            "title": "イベント開始時刻",
            "type": "TIME",
            "required": true,
            "duration": false,
            "description": "24時間形式で入力してください"
          }
        }
      ]
    }
  },
  "useCases": {
    "eventRegistration": {
      "description": "イベント申込フォーム",
      "recommendedQuestions": [
        {
          "title": "参加希望日",
          "type": "DATE",
          "includeYear": true,
          "includeTime": false,
          "required": true
        },
        {
          "title": "到着予定時刻",
          "type": "TIME",
          "duration": false,
          "required": false
        }
      ]
    },
    "scheduling": {
      "description": "日程調整フォーム",
      "recommendedQuestions": [
        {
          "title": "第1希望日",
          "type": "DATE",
          "includeYear": true,
          "includeTime": true,
          "required": true
        },
        {
          "title": "第2希望日",
          "type": "DATE",
          "includeYear": true,
          "includeTime": true,
          "required": false
        },
        {
          "title": "所要時間の目安",
          "type": "TIME",
          "duration": true,
          "required": false
        }
      ]
    },
    "timeTracking": {
      "description": "勤怠・時間管理フォーム",
      "recommendedQuestions": [
        {
          "title": "日付",
          "type": "DATE",
          "includeYear": true,
          "includeTime": false,
          "required": true
        },
        {
          "title": "出勤時刻",
          "type": "TIME",
          "duration": false,
          "required": true
        },
        {
          "title": "退勤時刻",
          "type": "TIME",
          "duration": false,
          "required": true
        },
        {
          "title": "休憩時間",
          "type": "TIME",
          "duration": true,
          "required": false
        }
      ]
    }
  },
  "apiNotes": {
    "DATE": [
      "日付はISO 8601形式で返される",
      "includeTime=trueの場合、日時両方が入力可能",
      "年なしの場合は月日のみの選択になる"
    ],
    "TIME": [
      "時刻は24時間形式",
      "duration=trueの場合は「時間:分:秒」形式",
      "duration=falseの場合は「時:分」形式"
    ]
  }
}
