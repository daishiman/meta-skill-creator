{
  "$schema": "../../schemas/question.json",
  "name": "スケール・評価質問ビルダー",
  "description": "SCALE / RATING 質問の構造",
  "examples": {
    "scale_1_to_5": {
      "title": "サービスの満足度を教えてください",
      "type": "SCALE",
      "required": true,
      "low": 1,
      "high": 5,
      "lowLabel": "不満",
      "highLabel": "満足"
    },
    "scale_0_to_10": {
      "title": "友人にこのサービスを勧める可能性はどのくらいですか？（NPS）",
      "type": "SCALE",
      "required": true,
      "low": 0,
      "high": 10,
      "lowLabel": "全く勧めない",
      "highLabel": "強く勧める"
    },
    "scale_1_to_7": {
      "title": "この機能の重要度を評価してください",
      "type": "SCALE",
      "required": true,
      "low": 1,
      "high": 7,
      "lowLabel": "重要でない",
      "highLabel": "非常に重要"
    },
    "rating_star_5": {
      "title": "この商品を評価してください",
      "type": "RATING",
      "required": true,
      "ratingScaleLevel": 5,
      "iconType": "STAR"
    },
    "rating_heart_5": {
      "title": "このコンテンツはお気に入りですか？",
      "type": "RATING",
      "required": false,
      "ratingScaleLevel": 5,
      "iconType": "HEART"
    },
    "rating_thumb_3": {
      "title": "この回答は役に立ちましたか？",
      "type": "RATING",
      "required": true,
      "ratingScaleLevel": 3,
      "iconType": "THUMB_UP"
    },
    "rating_star_10": {
      "title": "全体的な体験を評価してください",
      "type": "RATING",
      "required": true,
      "ratingScaleLevel": 10,
      "iconType": "STAR"
    }
  },
  "api_structure": {
    "scaleQuestion": {
      "low": "integer (最小値: 0または1)",
      "high": "integer (最大値: 2〜10)",
      "lowLabel": "string (最小値のラベル、任意)",
      "highLabel": "string (最大値のラベル、任意)"
    },
    "ratingQuestion": {
      "ratingScaleLevel": "integer (評価段階: 3〜10)",
      "iconType": "STAR | HEART | THUMB_UP"
    }
  },
  "usage_guide": {
    "SCALE": {
      "description": "数値での段階評価。ラベル付きで意味を明確化",
      "best_for": ["満足度調査", "重要度評価", "NPS", "リッカート尺度"]
    },
    "RATING": {
      "description": "視覚的なアイコンでの評価。直感的で回答しやすい",
      "best_for": ["商品レビュー", "コンテンツ評価", "簡易フィードバック"]
    }
  },
  "iconType_guide": {
    "STAR": "一般的な評価（商品レビュー、サービス評価）",
    "HEART": "感情的な評価（お気に入り度、好感度）",
    "THUMB_UP": "シンプルな評価（役立ち度、推奨度）"
  }
}
