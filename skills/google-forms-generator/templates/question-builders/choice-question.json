{
  "$schema": "../../schemas/question.json",
  "name": "選択式質問ビルダー",
  "description": "RADIO / CHECKBOX / DROP_DOWN 質問の構造",
  "examples": {
    "radio_simple": {
      "title": "性別を選択してください",
      "type": "RADIO",
      "required": true,
      "options": ["男性", "女性", "回答しない"],
      "hasOther": false,
      "shuffle": false
    },
    "radio_with_other": {
      "title": "よく使用するプログラミング言語は？",
      "type": "RADIO",
      "required": true,
      "options": ["Python", "JavaScript", "Java", "C++"],
      "hasOther": true,
      "shuffle": true
    },
    "radio_with_branching": {
      "title": "当サービスを利用したことがありますか？",
      "type": "RADIO",
      "required": true,
      "options": [
        {
          "value": "はい",
          "goToAction": "NEXT_SECTION"
        },
        {
          "value": "いいえ",
          "goToSectionId": "section_new_user"
        }
      ]
    },
    "checkbox_simple": {
      "title": "興味のある分野を選択してください（複数選択可）",
      "type": "CHECKBOX",
      "required": true,
      "options": ["AI/機械学習", "Web開発", "モバイル開発", "インフラ/DevOps", "データサイエンス"],
      "hasOther": true,
      "shuffle": true
    },
    "dropdown_simple": {
      "title": "お住まいの地域を選択してください",
      "type": "DROP_DOWN",
      "required": true,
      "options": ["北海道", "東北", "関東", "中部", "近畿", "中国", "四国", "九州・沖縄", "海外"]
    },
    "dropdown_with_branching": {
      "title": "部門を選択してください",
      "type": "DROP_DOWN",
      "required": true,
      "options": [
        {
          "value": "営業部",
          "goToSectionId": "section_sales"
        },
        {
          "value": "技術部",
          "goToSectionId": "section_tech"
        },
        {
          "value": "管理部",
          "goToSectionId": "section_admin"
        }
      ]
    }
  },
  "api_structure": {
    "choiceQuestion": {
      "type": "RADIO | CHECKBOX | DROP_DOWN",
      "options": [
        {
          "value": "string (選択肢テキスト)",
          "isOther": "boolean (「その他」オプション、DROP_DOWNでは使用不可)",
          "goToAction": "NEXT_SECTION | RESTART_FORM | SUBMIT_FORM (条件分岐)",
          "goToSectionId": "string (特定セクションへジャンプ)"
        }
      ],
      "shuffle": "boolean (選択肢をランダム表示)"
    }
  },
  "limitations": {
    "DROP_DOWN": "isOther（その他）オプションは使用不可",
    "CHECKBOX": "条件分岐（goToAction/goToSectionId）は使用不可",
    "branching": "最終ページでは効果なし"
  }
}
