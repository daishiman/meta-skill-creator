{
  "$schema": "../../schemas/question.json",
  "name": "評価質問ビルダー",
  "description": "RATING 質問の構造（視覚的アイコンによる評価）",
  "questionTypes": {
    "RATING": {
      "displayName": "評価（星/ハート/👍）",
      "description": "視覚的なアイコンで評価を収集",
      "apiStructure": {
        "ratingQuestion": {
          "ratingScaleLevel": 5,
          "iconType": "STAR"
        }
      },
      "parameters": {
        "ratingScaleLevel": {
          "type": "integer",
          "min": 3,
          "max": 10,
          "default": 5,
          "description": "評価段階数"
        },
        "iconType": {
          "type": "enum",
          "values": ["STAR", "HEART", "THUMB_UP"],
          "default": "STAR",
          "description": "表示アイコンの種類"
        }
      }
    }
  },
  "examples": {
    "star_5": {
      "title": "この商品を評価してください",
      "type": "RATING",
      "required": true,
      "ratingScaleLevel": 5,
      "iconType": "STAR"
    },
    "star_10": {
      "title": "全体的な体験を評価してください",
      "type": "RATING",
      "required": true,
      "ratingScaleLevel": 10,
      "iconType": "STAR"
    },
    "heart_5": {
      "title": "このコンテンツはお気に入りですか？",
      "type": "RATING",
      "required": false,
      "ratingScaleLevel": 5,
      "iconType": "HEART"
    },
    "heart_3": {
      "title": "このデザインの好感度を教えてください",
      "type": "RATING",
      "required": true,
      "ratingScaleLevel": 3,
      "iconType": "HEART"
    },
    "thumb_3": {
      "title": "この回答は役に立ちましたか？",
      "type": "RATING",
      "required": true,
      "ratingScaleLevel": 3,
      "iconType": "THUMB_UP"
    },
    "thumb_5": {
      "title": "サポートの対応はいかがでしたか？",
      "type": "RATING",
      "required": true,
      "ratingScaleLevel": 5,
      "iconType": "THUMB_UP"
    }
  },
  "iconType_guide": {
    "STAR": {
      "displayName": "星",
      "description": "最も一般的な評価アイコン",
      "best_for": ["商品レビュー", "サービス評価", "総合評価", "品質評価"],
      "typical_scales": [3, 5, 10]
    },
    "HEART": {
      "displayName": "ハート",
      "description": "感情的・好感度の評価向け",
      "best_for": ["お気に入り度", "好感度", "デザイン評価", "コンテンツ評価"],
      "typical_scales": [3, 5]
    },
    "THUMB_UP": {
      "displayName": "サムズアップ",
      "description": "シンプルな賛否・有用性の評価向け",
      "best_for": ["役立ち度", "推奨度", "簡易フィードバック", "YES/NO的評価"],
      "typical_scales": [3, 5]
    }
  },
  "usage_guide": {
    "段階数の選び方": {
      "3段階": "シンプルな評価（良い/普通/悪い）",
      "5段階": "標準的な評価（最も一般的）",
      "10段階": "詳細な評価（NPS風、細かい違いを測定）"
    },
    "アイコンの選び方": {
      "STAR": "フォーマルな評価、商品・サービスレビュー",
      "HEART": "カジュアルな評価、感情的なフィードバック",
      "THUMB_UP": "シンプルな評価、役立ち度"
    }
  },
  "api_structure": {
    "ratingQuestion": {
      "ratingScaleLevel": "integer (評価段階: 3〜10、デフォルト: 5)",
      "iconType": "STAR | HEART | THUMB_UP (デフォルト: STAR)"
    }
  },
  "apiNotes": [
    "ratingScaleLevelは3〜10の範囲で指定",
    "iconTypeを省略するとSTARがデフォルト",
    "回答はnumber型で返される（1〜ratingScaleLevel）",
    "SCALEとは異なり、ラベルは設定不可"
  ],
  "comparison_with_scale": {
    "RATING": {
      "特徴": "視覚的アイコン、直感的、ラベルなし",
      "用途": "シンプルな評価、レビュー、好感度"
    },
    "SCALE": {
      "特徴": "数値スケール、ラベル付き、論理的",
      "用途": "満足度調査、NPS、リッカート尺度"
    }
  }
}
